<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.DetailNewsFragment"
    tools:ignore="RtlCompat">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/componente_6_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icons_8_expand_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icons_8_menu_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title_new"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="39dp"
                    android:fontFamily="@font/raleway_black"
                    android:text="EDITORIAL NEWS"
                    android:textColor="#121212"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                android:background="@drawable/border_up_left_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@drawable/border_up_left_20"
                    android:paddingStart="19dp"
                    android:paddingTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/raggruppa_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recycler_view_1" />

                <TextView
                    android:id="@+id/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22.5dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/border_13_green"
                    android:fontFamily="@font/raleway"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:text="CRYPTOCURRENCY"
                    android:textColor="#0a0909"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/image_2"
                    app:layout_constraintTop_toBottomOf="@id/image_2" />

                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="46.5dp"
                    android:src="@drawable/icons_8_calendar"
                    app:layout_constraintStart_toStartOf="@id/image_2"
                    app:layout_constraintTop_toBottomOf="@id/image_2" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="3dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/lato_light"
                    android:text="02 Set 2020 "
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="@id/image_2"
                    app:layout_constraintTop_toBottomOf="@id/image_3" />

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="46.5dp"
                    android:layout_marginEnd="7dp"
                    android:background="#6021ea"
                    android:fontFamily="@font/raleway_black"
                    android:gravity="right|center"
                    android:lines="2"
                    android:paddingRight="2dp"
                    android:text="What is the future of
cryptocurrencies?"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/image_2"
                    app:layout_constraintTop_toBottomOf="@id/image_2" />


                <TextView
                    android:paddingStart="2dp"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/image_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="30dp"
                    android:id="@+id/content"
                    android:layout_marginTop="128dp"
                    android:fontFamily="@font/lato"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:text="@string/content"
                    android:textColor="#000000"
                    tools:ignore="UnusedAttribute" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_shadow_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>