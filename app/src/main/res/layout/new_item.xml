<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="125dp"

    android:layout_marginBottom="21dp"
    android:background="@drawable/border_4_white_fill"
    tools:ignore="RtlCompat">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="102dp"
        android:layout_height="104dp"
        android:layout_marginStart="1dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_2390177" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/raleway"
        android:text="ALT -3,87%"
        android:textColor="#f00909"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/lato_light"
        android:textColor="#080808"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3 Sept 2020" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/raleway_black"
        android:text="ATLANTIA"
        android:textColor="#2e2e2e"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/gruppo_di_maschere_1_clipped"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="155dp"
        android:layout_height="match_parent"
        android:layout_marginStart="121dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/lato_light"
        android:gravity="start|top"
        android:lines="3"
        android:text="Illum velit nam voluptatum enim au
        tratione ratione officiis totam.
        Mollitia eum sint tempora ducimus"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>