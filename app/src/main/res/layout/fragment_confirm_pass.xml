<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ConfirmPassFragment"
    tools:ignore="RtlCompat">

    <ImageView
        android:id="@+id/image_2"
        android:layout_width="390dp"
        android:layout_height="164dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/componente_6_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_5"
        android:layout_width="390dp"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/componente_4_3"
        app:layout_constraintEnd_toEndOf="@id/image_3"
        app:layout_constraintStart_toStartOf="@id/image_3"
        app:layout_constraintTop_toTopOf="@id/image_3" />

    <ImageView
        android:id="@+id/image_6"
        android:layout_width="55sp"
        android:layout_height="78dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="42dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/flying_coins"
        app:layout_constraintStart_toStartOf="@id/image_2"
        app:layout_constraintTop_toTopOf="@id/image_3" />

    <ImageView
        android:id="@+id/image_7"
        android:layout_width="55sp"
        android:layout_height="78dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="45dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/flying_coins_2"
        app:layout_constraintEnd_toEndOf="@id/image_2"
        app:layout_constraintTop_toTopOf="@id/image_3" />

    <ImageView
        android:id="@+id/image_3"
        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:layout_marginTop="202dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/pixeltrue_special_deals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_black"
            android:text="TRADIX"
            android:textColor="#2b2828"
            android:textSize="24dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@id/coin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/coin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_1"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/raleway_black"
        android:text="We have sent you an"
        android:textColor="#656565"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/image_2"
        app:layout_constraintStart_toStartOf="@id/image_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_black"
        android:text="changed!"
        android:textColor="#656565"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/image_2"
        app:layout_constraintStart_toStartOf="@id/image_2"
        app:layout_constraintTop_toBottomOf="@id/title_1" />

    <TextView
        android:id="@+id/des_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_light"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/image_2"
        app:layout_constraintStart_toStartOf="@id/image_2"
        app:layout_constraintTop_toBottomOf="@id/title_2"
        tools:text="You can now log into your account" />

    <TextView
        android:id="@+id/des_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_light"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/image_2"
        app:layout_constraintStart_toStartOf="@id/image_2"
        app:layout_constraintTop_toBottomOf="@id/des_1"
        tools:text="with the new password" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_20_purple"
        android:text="login"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_3" />

</androidx.constraintlayout.widget.ConstraintLayout>